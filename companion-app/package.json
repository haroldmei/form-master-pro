{
  "name": "formmaster-companion",
  "version": "0.1.0",
  "description": "Companion app for FormMaster browser extension",
  "main": "main.js",
  "author": "FormMaster Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "node register-native-messaging.js"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "electron-store": "^8.1.0",
    "luxon": "^3.4.0",
    "mammoth": "^1.6.0",
    "node-ipc": "^10.1.0",
    "selenium-webdriver": "^4.10.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.formmaster.companion",
    "productName": "FormMaster Companion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!.angular-cli.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "resources/icon.png"
    }
  }
}
