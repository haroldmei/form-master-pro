{
  "manifest_version": 3,
  "name": "Form Master",
  "description": "Load and manage JSON data for forms",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "developerPrivate",
    "contextMenus",
    "activeTab"
  ],
  
  "web_accessible_resources": [{
    "resources": [
      "files/*.js",
      "libs/*.js"
    ],
    "matches": ["<all_urls>"]
  }],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  // If your manifest is v3, you might need this for module support
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
